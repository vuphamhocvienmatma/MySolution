{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedOrigins": [
    "https://my-frontend-app.com",
    "http://localhost:3000"
  ],
  "JwtSettings": {
    "Issuer": "https://your-api-domain.com",
    "Audience": "https://your-client-domain.com",
    "Key": "THIS_IS_A_SUPER_SECRET_KEY_THAT_IS_LONG_AND_COMPLEX",
    "TokenLifetimeMinutes": 60
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://web-api/"
          }
        }
      }
    }
  }
}